<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonyCore.View.AddInc">
    <ScrollView>
        <StackLayout>
            <Frame Margin="0, 30, 0, 15" HasShadow="True" >
                <StackLayout>
                    <Label TextColor="SlateGray" Text="Введите сумму расхода"
                VerticalOptions="Center" 
                HorizontalOptions="Start"
                HorizontalTextAlignment="Center"/>
                    <Entry Placeholder="0" x:Name="Number" Keyboard="Numeric" HorizontalOptions="FillAndExpand" TextColor="#343E46"></Entry>
                    <Button Text="Добавить" Clicked="Button_Clicked" BackgroundColor="Beige"></Button>
                </StackLayout>
        
            </Frame>


            <ScrollView>
                <StackLayout>
                    <Label Text="Истроия" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
                    <StackLayout x:Name="History">
    
                        
                        
                    </StackLayout>
                </StackLayout>
                
            </ScrollView>
          
            
        </StackLayout>

    </ScrollView>

      
</ContentPage>