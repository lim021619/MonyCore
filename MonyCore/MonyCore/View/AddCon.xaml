<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonyCore.View.AddCon" 
             Title="Доходы">
    <StackLayout>
        <StackLayout Padding="5">

            <StackLayout Padding="0" >
                
                <StackLayout Orientation="Horizontal" >
                    <Frame Margin="3" BackgroundColor="Beige" CornerRadius="5" HorizontalOptions="FillAndExpand">
                        <Label  Text="Страница доходов" TextColor="#3CD596" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="20"></Label>
                    </Frame>
                    <Frame Margin="3" BackgroundColor="Beige" CornerRadius="5" HorizontalOptions="FillAndExpand">
                        <StackLayout Orientation="Horizontal">
                            <Label  Text="Записей: " TextColor="#3CD596" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="20"></Label>
                            <Label x:Name="CountIncom" Text="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" HorizontalOptions="FillAndExpand" FontSize="20"></Label>
                        </StackLayout>
                    </Frame>
                
                    
                </StackLayout>
                
            </StackLayout>
            
            <Frame Margin="0, 3, 0, 3" HasShadow="True" CornerRadius="10" Padding="0">
                <StackLayout >
                    <Label x:Name="labelEnter" TextColor="#3CD596" Text="Введите сумму дохода"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center" 
                           VerticalTextAlignment="Center"
                           FontSize="20"
                           Margin="10"
                           />
                    <Entry Placeholder="0" x:Name="Number" Keyboard="Numeric" HorizontalOptions="Fill"  TextColor="#3CD596" BackgroundColor="Transparent" HorizontalTextAlignment="Center"></Entry>
                    <Button x:Name="badd" Text="Добавить" TextColor="#3CD596" Clicked="Button_Clicked" BackgroundColor="Beige" FontSize="18"></Button>
                </StackLayout>

            </Frame>
            
            <Button CornerRadius="10" Text="Истроия" HorizontalOptions="FillAndExpand" FontSize="14"
                  Clicked="Button_Clicked_1"  ></Button>
            
            <Frame x:Name="DivHistory" CornerRadius="10"  BackgroundColor="Beige" Padding="0" HorizontalOptions="Fill" >

                <ScrollView>
                <StackLayout>
                  
                    <StackLayout x:Name="History">
                        

                    </StackLayout>
                </StackLayout>
            
            </ScrollView>
            </Frame>


        </StackLayout>

    </StackLayout>
</ContentPage>